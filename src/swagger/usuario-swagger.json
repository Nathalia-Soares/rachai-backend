{
  "swagger": "2.0",
  "info": {
    "description": "API para gerenciamento de usuários",
    "version": "1.0.0",
    "title": "API de Usuários"
  },
  "host": "localhost:8081",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "/criar_usuario": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Cadastra um novo usuário",
        "description": "Cadastra um novo usuário",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do usuário para cadastro",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "ra": {
                  "type": "string"
                },
                "curso": {
                  "type": "string"
                },
                "score": {
                  "type": "number"
                },
                "tipo_usuario": {
                  "type": "string"
                },
                "veiculos": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao cadastrar usuário",
            "schema": {
              "type": "object",
              "properties": {
                "erro": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/usuario/{id}/upload": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Faz upload de imagem do usuário",
        "description": "Faz upload de imagem do usuário",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Dados para upload de imagem",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "file": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Imagem enviada com sucesso",
            "schema": {
              "type": "object",
              "properties": {
