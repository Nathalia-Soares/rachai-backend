  "paths": {
    "/usuarios/criar_usuario": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Cadastra um novo usuário",
        "description": "Cadastra um novo usuário",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do usuário para cadastro",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "ra": {
                  "type": "string"
                },
                "curso": {
                  "type": "string"
                },
                "score": {
                  "type": "number"
                },
                "tipo_usuario": {
                  "type": "string"
                },
                "veiculos": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao cadastrar usuário",
            "schema": {
              "type": "object",
              "properties": {
                "erro": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/usuarios/usuario/{id}/upload": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Faz upload de uma imagem para o usuário",
        "description": "Faz upload de uma imagem para o usuário especificado pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do usuário"
          },
          {
            "name": "imagem",
            "in": "formData",
            "required": true,
            "type": "file",
            "description": "Imagem a ser carregada"
          }
        ],
        "responses": {
          "200": {
            "description": "Imagem carregada com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "img_url": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao carregar a imagem"
          }
        }
      }
    },
