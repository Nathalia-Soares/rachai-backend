              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "ra": {
                    "type": "string"
                  },
                  "curso": {
                    "type": "string"
                  },
                  "score": {
                    "type": "number"
